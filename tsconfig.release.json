{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2016"
    ],
    "declaration": true,
    "module": "amd",
    "removeComments": true,
    "moduleResolution": "node",
    "newLine": "LF",
    "experimentalDecorators": true,
    "sourceMap": false,
    "outDir": "release/lib"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ]
}
