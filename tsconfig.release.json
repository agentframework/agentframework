{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2016"
    ],
    "declaration": true,
    "module": "es2015",
    "removeComments": true,
    "moduleResolution": "node",
    "newLine": "LF",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "release/lib",
    "typeRoots": [
      "node_modules/@types/"
    ],
    "types": [
      "jasmine",
      "node"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ]
}
