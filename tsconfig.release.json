{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2015",
      "es2016"
    ],
    "declaration": true,
    "module": "amd",
    "removeComments": true,
    "moduleResolution": "node",
    "newLine": "LF",
    "experimentalDecorators": true,
    "sourceMap": true,
    "outFile": "release/lib/index.js",
    "typeRoots": [
      "node_modules/@types/"
    ],
    "types": [
      "jasmine",
      "node",
      "webpack"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ]
}
