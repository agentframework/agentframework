{
  "name": "agentframework",
  "version": "0.2.1",
  "description": "Agent Oriented Programming for TypeScript",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "start": "NODE_ENV=test node_modules/.bin/nodemon --config tools/testmon.json && exit 0",
    "test": "npm run lint && npm run build && npm run test:coverage",
    "cov": "npm run test:coverage",
    "test:unit": "node_modules/.bin/ts-node tools/jasmine.ts",
    "test:coverage": "node_modules/.bin/ts-node node_modules/.bin/istanbul cover --config=tools/istanbul.yml node_modules/.bin/jasmine JASMINE_CONFIG_PATH=tools/jasmine.full.json",
    "lint": "standard --pretty",
    "build": "npm run build:clean && npm run build:tsc",
    "build:clean": "rm -rf ./lib",
    "build:tsc": "node_modules/.bin/tsc -p tsconfig.release.json",
    "build:webpack": "node_modules/.bin/webpack --display-error-details --config tools/webpack.config.ts",
    "test-on-travis": "npm run lint && npm run test:coverage",
    "test-on-teamcity": "exit 1"
  },
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agentframework/agentframework.git"
  },
  "keywords": [
    "aop",
    "typescript",
    "es6",
    "proxy"
  ],
  "author": "Ling Zhang",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/agentframework/agentframework/issues"
  },
  "homepage": "https://github.com/agentframework/agentframework#readme",
  "devDependencies": {
    "@types/jasmine": "latest",
    "@types/node": "latest",
    "@types/webpack": "latest",
    "istanbul": "next",
    "jasmine": "latest",
    "jasmine-spec-reporter": "latest",
    "nodemon": "latest",
    "ts-loader": "latest",
    "ts-node": "latest",
    "typescript": "latest",
    "typescript-standard": "latest",
    "webpack": "beta"
  }
}
